{
  "name": "formulizer",
  "private": true,
  "version": "1.0.1",
  "description": "A W3C-compliant web component that renders UI forms based on a declarative JSON Schema",
  "main": "dist/formulizer.js",
  "module": "dist/formulizer.js",
  "browser": "dist/formulizer.min.js",
  "types": "dist/formulizer.d.ts",
  "type": "module",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "build:watch": "concurrently 'tsc --watch' 'rollup -c --watch'",
    "clean": "rimraf 'dist/**/*.{d.ts,d.ts.map,js,js.map,html}'",
    "clean:build": "npm run clean && npm run build",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "test": "npx playwright test --project=chrome",
    "test:all": "npx playwright test",
    "test:debug": "npx playwright test --debug --project=chrome -g",
    "test:one": "npx playwright test  --project=chrome -g "
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit",
    "form",
    "JSON-Schema"
  ],
  "author": "M. Ben Zekri",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@lit/context": "^1.1.4",
    "@types/markdown-it": "^14.1.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ajv-i18n": "^4.2.0",
    "bootstrap": "^5.3.3",
    "lit": "^3.2.0",
    "markdown-it": "^14.1.0",
    "source-map": "^0.7.4",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-url": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.15.0",
    "lit-analyzer": "^2.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^4.34.6",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-summary": "^2.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "tslib": "^2.8.1",
    "typescript": "~5.5.0"
  }
}
