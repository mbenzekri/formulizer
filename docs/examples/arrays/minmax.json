{
    "form": {
        "definitions": {
            "symptome" : {
                "type" : "string",
                "oneOf": [
                    {
                        "const": "FIEVRE",
                        "title": "Le patient a-t-il de la fièvre",
                        "covid": true
                    },
                    {
                        "const": "CEPHALEE",
                        "title": "Le patient a-t-il des maux de tête",
                        "covid": true
                    },
                    {
                        "const": "COURBATURE",
                        "title": "Le patient a-t-il des courbatures"
                    },
                    {
                        "const": "TOUX",
                        "title": "Le patient a-t-il de la toux",
                        "covid": true
                    },
                    {
                        "const": "NAUSEE",
                        "title": "Le patient a-t-il des nausées"
                    },
                    {
                        "const": "VOMISSEMENT",
                        "title": "Le patient a-t-il des vossiments"
                    },
                    {
                        "const": "ACOUPHENE",
                        "title": "Le patient a-t-il des acouphènes"
                    },
                    {
                        "const": "SUEUR",
                        "title": "Le patient a-t-il des sueurs"
                    },
                    {
                        "const": "ULCERE",
                        "title": "Le patient a-t-il des ulcères"
                    },
                    {
                        "const": "AGUEUSIE",
                        "title": "Le patient a-t-il perdu le gout",
                        "covid": true
                    }
                ]
            },
            "hero" : {
                "type": "object",
                "abstract": "${value.team} - ${value.alias}",
                "properties" : {
                    "team" : { "type": "string" },
                    "name" : { "type": "string" },
                    "alias" : { "type": "string" }
                }
            },
            "lieu": {
                "type": "string",
                "enum": [
                    "domicile",
                    "secondaire",
                    "travail",
                    "vacances",
                    "facturation",
                    "autre"
                ]
            },
            "adresse": {
                "type": "object",
                "title": "Adresse",
                "properties": {
                    "type": {
                        "const": "postal address",
                        "visible": false
                    },
                    "lieu": {
                        "$ref": "#/definitions/lieu"
                    },
                    "no": {
                        "type": "integer"
                    },
                    "rue": {
                        "type": "string"
                    },
                    "ville": {
                        "type": "string"
                    }
                }
            },
            "email": {
                "type": "object",
                "title": "Email",
                "properties": {
                    "type": {
                        "const": "email address",
                        "visible": false
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "phonenum": {
                "type": "object",
                "title": "Phone Number",
                "properties": {
                    "type": {
                        "const": "phone number",
                        "visible": false
                    },
                    "number": {
                        "type": "string"
                    }
                }
            },
            "code": {
                "type": "object",
                "title": "Digicode",
                "properties": {
                    "type": {
                        "const": "digicode",
                        "visible": false
                    },
                    "target": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            }
        },
        "type": "object",
        "title": "Demo array",
        "required": [
            "colors"
        ],
        "properties": {
            "num1": {
                "type": "array",
                "title": "nombres (maxItems)",
                "maxItems": 3,
                "items": {
                    "type": "integer"
                }
            },
            "colors": {
                "type": "array",
                "title": "couleurs (minItems)",
                "minItems": 3,
                "items": {
                    "type": "string",
                    "title": "couleur",
                    "enum": [
                        "rouge",
                        "jaune",
                        "vert",
                        "violet",
                        "bleu",
                        "noir"
                    ],
                    "default": "noir"
                }
            },
            "adresses": {
                "type": "array",
                "title": "adresses",
                "items": {
                    "$ref": "#/definitions/adresse"
                }
            },
            "infos": {
                "type": "array",
                "title": "contact infos",
                "items": {
                    "oneOf": [
                        {
                            "case": "value.type == 'postal address'",
                            "$ref": "#/definitions/adresse"
                        },
                        {
                            "case": "value.type == 'email address'",
                            "$ref": "#/definitions/email"
                        },
                        {
                            "case": "value.type == 'phone number'",
                            "$ref": "#/definitions/phonenum"
                        },
                        {
                            "case": "value.type == 'digicode'",
                            "$ref": "#/definitions/code"
                        }
                    ]
                }
            },
            "symptomes": {
                "type": "array",
                "uniqueItems": true,
                "title": "symptome(s)",
                "items": { "$ref" : "#/definitions/symptome" }
            },
            "symptomes_covid": {
                "type": "array",
                "uniqueItems": true,
                "title": "symptome(s) Covid",
                "filter" : "schema.covid == true",
                "items": { "$ref" : "#/definitions/symptome" }
            },
            "heroes" : {
                "type": "array",
                "items" : {"$ref": "#/definitions/hero"},
                "orderBy" : "value.team + value.alias "
            }
        }
    },
    "data": {
        "infos": [
            {
                "type": "email address",
                "email": "m.b@abc.com"
            },
            {
                "type": "email address",
                "email": "bob@despicableme.com"
            },
            {
                "type": "phone number",
                "number": "0123456789"
            },
            {
                "type": "email address",
                "email": "bob@despicableme.com"
            },
            {
                "type": "postal address",
                "lieu": "domicile",
                "no": 24,
                "rue": "Rue Beaubourg",
                "ville": "Paris"
            }
        ],
        "symptomes": [
            "FIEVRE",
            "TOUX"
        ],
        "colors": ["rouge", "vert", "jaune"],
        "heroes" : [
            { "team": "X-Men", "name": "Logan", "alias": "Wolverine"},
            { "team": "Avengers", "name": "Tony Stark", "alias": "Iron Man"},
            { "team": "Fantastic 4", "name": "Reed Richards", "alias": "Mister Fantastic"},
            { "team": "X-Men", "name": "Charles Xavier", "alias": "Professeur X"},
            { "team": "Avengers", "name": "Peter Parker", "alias": "Spiderman"},
            { "team": "Avengers", "name": "Bruce Banner", "alias": "Hulk"},
            { "team": "Fantastic 4", "name": "Susan Storm", "alias": "Invisible Woman"}
        ]
    }
}